<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Event_Registration_Page">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:title="Registration Form"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <EditText
                        android:id="@+id/GameType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edtext_bg"
                        android:hint="Game Type"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:drawableStart="@drawable/outline_sports_baseball_24"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edtext_bg"
                        android:hint="Your Name"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:drawableStart="@drawable/ic_person"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/your_position"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edtext_bg"
                        android:hint="Your Position"
                        android:inputType="text"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:drawableStart="@drawable/outline_work_outline_24"
                        android:drawablePadding="10dp" />

                    <EditText
                        android:id="@+id/mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edtext_bg"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="12dp"
                        android:drawableStart="@drawable/baseline_phone_iphone_24"
                        android:drawablePadding="10dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="?attr/colorPrimary"
                android:text="REGISTER"
                android:padding="15dp"
                android:visibility="visible"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/regis_done_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/my_primary"
                android:drawablePadding="20dp"
                android:drawableStart="@drawable/baseline_done_outline_24"
                android:paddingBottom="15dp"
                android:paddingStart="20dp"
                android:paddingTop="15dp"
                android:text="Registration Done!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
