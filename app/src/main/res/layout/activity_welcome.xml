<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white"
    tools:context=".Welcome">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            android:layout_above="@+id/TextLayout"
            app:lottie_rawRes="@raw/welcomeanimaton" />

 <RelativeLayout
     android:id="@+id/TextLayout"
     android:layout_width="match_parent"
     android:layout_alignParentBottom="true"
     android:layout_height="wrap_content">




        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event management"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textSize="16sp"
            android:text="Welcome to Event Management
Streamline your event planning with Event Management! Manage budgets, schedules, guest lists, and vendors all in one place. Collaborate in real-time and enjoy customizable templates. Sign up today for a seamless event management experience."
            />



        <Button
            android:id="@+id/Start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:backgroundTint="@color/my_primary"
            android:text="LET'S  START"
            android:layout_marginTop="50dp"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
          />


 </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>