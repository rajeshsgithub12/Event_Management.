<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    tools:context=".EventDetails.UpComing_EventDetails">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUPER SIX FOOTBALL TOURNAMENT"
        android:textSize="22dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Starting 30th june At: 10 am"
        android:textSize="15sp"
        android:layout_below="@+id/textView1"
        android:fontFamily="serif"
        android:padding="4dp"

        />
    <ImageView
        android:id="@+id/superSix1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/img_event_1"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"


        />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Why Register?"
        android:textSize="20sp"
        android:layout_below="@+id/superSix1"
        android:fontFamily="serif"
        android:padding="4dp"
        android:textStyle="bold"


        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="1.Competitive Spirit
                  2.Exciting Prizes      "
        android:textSize="20sp"
        android:layout_below="@+id/textView4"
        android:fontFamily="serif"
        android:padding="4dp"
        android:height="70dp"

        />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Fill out the registration form. "
        android:textSize="15sp"
        android:layout_below="@+id/textView3"
        android:fontFamily="serif"
        android:padding="4dp"
        android:height="50dp"

        />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        android:layout_below="@+id/textView5"
        app:lottie_rawRes="@raw/welcomeanimaton" />


    <Button
        android:id="@+id/Registration_Now_Btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Registration Now" />



</RelativeLayout>